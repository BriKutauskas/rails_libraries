
<div class="content">

<p id="notice"><%= notice %></p>

<h1>Animal Tracker</h1>

<table>
  <thead>
    <tr>
      <th>Common name</th>
      <th>Latin name</th>
      <th>Kingdom</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="animal_list">
    <% @animals.each do |animal| %>
      <tr >
        <td><%= animal.common_name %></td>
        <td><%= animal.latin_name %></td>
        <td><%= animal.kingdom %></td>
        <td><%= link_to 'Show', animal %></td>
        <td><%= link_to 'Edit', edit_animal_path(animal) %></td>
        <td><%= link_to 'Destroy', animal, method: :delete, data: { confirm: 'Are you sure?' }, :remote => true %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Animal', new_animal_path %>
<%= link_to 'Sightings', sightings_path %>
</div>


<p>
  <div class="field">
    <label for="animal_common_name">Common Name</label><br>
    <input type="text" name="animal[common_name]" id="animal_common_name" />
  </div>

  <div class="field">
    <label for="animal_latin_name">Latin Name</label><br>
    <input type="text" name="animal[latin_name]" id="animal_latin_name" />
  </div>

  <div class="field">
    <label for="animal_kingdom">Animal Kingdom</label><br>
    <input type="text" name="animal[kingdom]" id="animal_kingdom" />
  </div>

  <button id="add_new_animal_button">Add New Animal</button>
</p>


<%= image_tag("zebra.png", :alt => "zebra", :class => "animal", :id => "zebra") %>
<%= image_tag("penguin.png", :alt => "zebra", :class => "animal", :id => "penguin") %>
<%= image_tag("turtle.png", :alt => "zebra", :class => "animal", :id => "turtle") %>
